{% schema %}
{
  "name": "Justified Hero",
  "settings": [
    {
        "type": "checkbox",
        "label": "Two image?",
        "id": "two_image"
    },
    {
        "type": "checkbox",
        "label": "Invert layout",
        "id": "invert"
    },
    {
        "type": "image_picker",
        "label": "Narrow Image",
        "id": "narrow_image"
    },
    {
        "type": "image_picker",
        "label": "Wide Image",
        "id": "wide_image"
    },
    {
        "type": "color_scheme",
        "label": "Color Scheme",
        "id": "color_scheme"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading Block",
      "settings": [
        {
          "type": "text",
          "id": "heading_text",
          "label": "Heading Text",
          "default": "Default Heading"
        }
      ]
    },
    {
      "type": "text",
      "name": "Paragraph Block",
      "settings": [
        {
          "type": "text",
          "id": "copy",
          "label": "Paragraph Text",
          "default": "Your text hereâ€¦"
        }
      ]
    },
    {
      "type": "cta_button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Button label",
          "default": "Click me"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "style",
          "label": "Button style",
          "default": "primary",
          "options": [
            { "value": "primary", "label": "Primary" },
            { "value": "secondary", "label": "Secondary" }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
        "name": "Stacked Hero"
    }
  ]
}
{% endschema %}
