{% schema %}
{
  "name": "Two Column Collapsible",
  "settings": [
    {
      "type": "text",
      "id": "first_column_heading",
      "label": "First Column Heading",
      "default": "Column 1"
    },
    {
      "type": "text",
      "id": "second_column_heading",
      "label": "Second Column Heading",
      "default": "Column 2"
    }
  ],
  "blocks": [
    {
      "type": "collapsible_item",
      "name": "Collapsible Item",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Item Heading"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Item Content"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Two Column Collapsible"
    }
  ]
}
{% endschema %}

<div class="brimm-blocks--two-column-collapsible">

  <div class="brimm-blocks--column">
    <h2>{{ section.settings.first_column_heading }}</h2>
    {% assign half = section.blocks.size | divided_by: 2 | ceil %}
    {% for block in section.blocks limit: half %}
      <div class="brimm-blocks--collapsible-item">
        <h3>{{ block.settings.heading }}</h3>
        <div>{{ block.settings.content }}</div>
      </div>
    {% endfor %}
  </div>

  <div class="brimm-blocks--column">
    <h2>{{ section.settings.second_column_heading }}</h2>
    {% assign half = section.blocks.size | divided_by: 2 | ceil %}
    {% for block in section.blocks offset: half %}
      <div class="brimm-blocks--collapsible-item">
        <h3>{{ block.settings.heading }}</h3>
        <div>{{ block.settings.content }}</div>
      </div>
    {% endfor %}
  </div>

</div>
