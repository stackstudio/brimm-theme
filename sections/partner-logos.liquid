<div class="partner-logos">
  {% for block in section.blocks %}
    <div class="partner-logo">
      {% if block.settings.logo_image %}
        <img
          src="{{ block.settings.logo_image | image_url: width: block.settings.logo_width }}"
          alt="{{ block.settings.alt_text | escape }}"
          style="width: {{ block.settings.logo_width }}px; height: auto;" />
      {% endif %}
    </div>
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Partner Logos",
    "settings": [],
    "blocks": [
      {
        "type": "logo",
        "name": "Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "logo_image",
            "label": "Logo Image"
          },
          {
            "type": "text",
            "id": "alt_text",
            "label": "Alt Text",
            "default": "Partner Logo"
          },
          {
            "type": "range",
            "id": "logo_width",
            "label": "Logo Width (px)",
            "default": 150,
            "min": 50,
            "max": 500,
            "step": 10
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Partner Logos",
        "category": "Custom"
      }
    ]
  }
{% endschema %}
{% stylesheet %}
  .partner-logos {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
  }

  .partner-logo img {
    display: block;
    max-height: 100%;
    object-fit: contain;
  }
{% endstylesheet %}
