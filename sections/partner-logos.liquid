<div class="page-width">
  {%- unless section.settings.block_text == blank -%}
    <div class='title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin multicolumn__title'>
      <h2 class='title inline-richtext'>
        {{ section.settings.block_text }}
      </h2>
    </div>
  {%- endunless -%}
  <div class="partner-logos">
    {% for block in section.blocks %}
      <div class="partner-logo">
        {% if block.settings.logo_image %}
          <img
            src="{{ block.settings.logo_image | image_url: width: block.settings.logo_width }}"
            alt="{{ block.settings.alt_text | escape }}"
            width="{{ block.settings.logo_width }}px"
            height="auto" />
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Partner Logos",
    "settings": [
      {
        "type": "inline_richtext",
        "id": "block_text",
        "default": "Our Partners",
        "label": "Block text"
      }
    ],
    "blocks": [
      {
        "type": "logo",
        "name": "Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "logo_image",
            "label": "Logo Image"
          },
          {
            "type": "text",
            "id": "alt_text",
            "label": "Alt Text",
            "default": "Partner Logo"
          },
          {
            "type": "range",
            "id": "logo_width",
            "label": "Logo Width (px)",
            "default": 150,
            "min": 50,
            "max": 500,
            "step": 10
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Partner Logos",
        "category": "Custom"
      }
    ]
  }
{% endschema %}
{% stylesheet %}
  .partner-logos {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
    padding: 7.5rem 5rem 0;
    align-items: center;

    @media screen and (max-width: 750px) {
      padding: 3rem 2rem 0;
    }
  }

  .partner-logo {
    max-width: 150px;

    @media screen and (max-width: 750px) {
      width: 150px;
    }
  }

  .partner-logo img {
    display: block;
    max-height: 100%;
    object-fit: contain;
  }
{% endstylesheet %}
