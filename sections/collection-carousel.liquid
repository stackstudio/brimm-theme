{% schema %}
{
  "name": "Collection Carousel",
  "settings": [
      {
        "type": "collection",
        "id": "collection",
        "label": "Select Collection"
      },
      {
        "type": "image_picker",
        "id": "custom_image",
        "label": "Custom Image"
      },
      {
        "type": "video",
        "id": "custom_video",
        "label": "Custom Video"
      },
      {
        "type": "text",
        "id": "custom_title",
        "label": "Custom Title"
      },
      {
        "type": "textarea",
        "id": "custom_description",
        "label": "Custom Description"
      },
    ],
  "blocks": [],
  "presets": [
    {
      "name": "Collection Carousel"
    }
  ]
}
{% endschema %}

<div class="brimm-blocks--collection-carousel">
  {% assign collection = collections[section.settings.collection] %}

  {% if collection %}
    <div class="collection-carousel-grid">
      <!-- First Column: Collection info -->
      <div class="collection-info collection-carousel-card">
        {% if collection.image %}
            <div class="carousel-image-wrapper collection-card">
                {% if section.settings.custom_video != blank %}
                    <video autoplay muted loop playsinline>
                        <source src="{{ section.settings.custom_video | file_url }}" type="video/mp4">
                    </video>
                {% elsif section.settings.custom_image != blank %}
                  <img src="{{ section.settings.custom_image | img_url: '600x' }}" alt="">
                {% endif %}
            </div>
            {% if section.settings.custom_title != blank %}
              <h3>{{ section.settings.custom_title }}</h3>
            {% endif %}

            {% if section.settings.custom_description != blank %}
              <p>{{ section.settings.custom_description }}</p>
            {% endif %}
        {% endif %}
      </div>

      <!-- Next three columns: products -->
      <div class="collection-products">
        <div class="product-track">
          {% for product in collection.products %}
            <div class="collection-carousel-card">
              <a href="{{ product.url }}">
                {% if product.featured_image %}
                    <div class="carousel-image-wrapper">
                        <img class="carousel-image" src="{{ product.featured_image | img_url: '800x' }}" alt="{{ product.title }}">
                    </div>
                {% endif %}
                <h3>{{ product.title }}</h3>
                <p>{{ product.price | money }}</p>
              </a>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  {% endif %}
</div>

<style>
.brimm-blocks--collection-carousel {
    padding: var(--space-3xl) var(--space-l);
}
.brimm-blocks--collection-carousel .collection-carousel-grid {
  display: grid;
  grid-template-columns: 1fr 3fr;
  gap: var(--space-m);
  align-items: start;
}

.brimm-blocks--collection-carousel .collection-info {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.brimm-blocks--collection-carousel .collection-products {
  overflow: hidden;
  position: relative;
}

.brimm-blocks--collection-carousel .product-track {
  display: grid;
  grid-auto-flow: column;
  grid-auto-columns: calc(100% / 3);
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  gap: 1rem;
  padding-bottom: 0.5rem;
}

.carousel-image-wrapper {
    aspect-ratio: 3/4;
}

.carousel-image-wrapper.collection-card {
    aspect-ratio: 5/8;
    img {
        aspect-ratio: 5/8;
    }
}

.collection-carousel-card img {
  object-fit: cover;
  width: auto;
  max-width: 100%;
  aspect-ratio: 3/4;
}

.collection-carousel-card a {
    color: inherit;
    text-decoration: none;
}

.collection-carousel-card p {
    margin: 0;
}

.collection-carousel-card h3 {
    color: black;
    text-decoration: none;
    margin: 0;
}

.brimm-blocks--collection-carousel .product-carousel {
  display: flex;
  gap: var(--space-m);
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  padding-bottom: 0.5rem;
}

.brimm-blocks--collection-carousel .product-item {
  scroll-snap-align: start;
  border: 1px solid #ddd;
  padding: 0.5rem;
  background: #fff;
  border-radius: 0.5rem;
  min-width: 0; /* prevents overflow fighting */
}

</style>
