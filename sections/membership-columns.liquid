{% schema %}
{
  "name": "Membership Columns",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why join us?"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Explore the benefits of membership</p>"
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Number of columns",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "richtext",
          "id": "benefits",
          "label": "Membership Benefits"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Learn more"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Membership Columns",
      "blocks": [
        { "type": "column" },
        { "type": "column" },
        { "type": "column" }
      ]
    }
  ]
}
{% endschema %}

<div class="brimm-blocks--membership">
    <div class="page-width">
        <div class="brimm-blocks--section-header">
            <h2>{{ section.settings.heading }}</h2>
            <div class="rte">{{ section.settings.subheading }}</div>
        </div>
        <div class="brimm-blocks--membership-columns grid-cols-{{ section.settings.columns }}">
            {% for block in section.blocks %}
                <div class="brimm-blocks--column">
                <h3>{{ block.settings.title }}</h3>
                <div class="brimm-blocks--content">
                    {{ block.settings.content }}
                </div>
                <div class="brimm-blocks--benefits">
                    {{ block.settings.benefits }}
                </div>
                {% if block.settings.button_label %}
                    <a href="{{ block.settings.button_url }}" class="button">
                    {{ block.settings.button_label }}
                    </a>
                {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
