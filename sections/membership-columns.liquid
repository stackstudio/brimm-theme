{% schema %}
{
  "name": "Membership Columns",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why join us?"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Explore the benefits of membership</p>"
    },
    {
      "type": "text",
      "id": "supporter_heading",
      "label": "Supporter Tier Heading",
      "default": "Supporter Tier"
    },
    {
      "type": "richtext",
      "id": "supporter_text",
      "label": "Supporter Tier Text",
      "default": "<p>Support BRiMM and power the planet fund.</p>"
    },
    {
      "type": "text",
      "id": "supporter_yearly_price",
      "label": "Supporter Tier Yearly Price",
      "default": "£60"
    },
    {
      "type": "text",
      "id": "supporter_monthly_price",
      "label": "Supporter Tier Monthly Price",
      "default": "£6"
    },
    {
      "type": "text",
      "id": "supporter_button_label",
      "label": "Supporter Button Label",
      "default": "Learn more"
    },
    {
      "type": "url",
      "id": "supporter_button_url",
      "label": "Supporter Button URL"
    },
    {
      "type": "richtext",
      "id": "supporter_benefit_one",
      "label": "First Supporter Benefit",
      "default": "<h4>Journal Access</h4><p>Why this is good.</p>"
    },
    {
      "type": "richtext",
      "id": "supporter_benefit_two",
      "label": "Second Supporter Benefit",
      "default": "<h4>Journal Access</h4><p>Why this is good.</p>"
    },
    {
      "type": "richtext",
      "id": "supporter_benefit_three",
      "label": "Third Supporter Benefit",
      "default": "<h4>Journal Access</h4><p>Why this is good.</p>"
    },
    {
      "type": "richtext",
      "id": "global_benefits",
      "label": "Global Benefits",
      "default": "<h3>A benefit</h3><p>A description</p>"
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Number of tier columns",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3
    },
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
            "type": "image_picker",
            "id": "column_image",
            "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "text",
          "id": "yearly_price",
          "label": "Yearly price"
        },
        {
          "type": "text",
          "id": "monthly_price",
          "label": "Monthly price"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Learn more"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Membership Columns",
      "blocks": [
        { "type": "column" },
        { "type": "column" }
      ]
    }
  ]
}
{% endschema %}

<div class="brimm-blocks--membership">
    <div class="page-width">
        <div class="brimm-blocks--section-header">
            <h2>{{ section.settings.heading }}</h2>
            <div class="rte">{{ section.settings.subheading }}</div>
        </div>
        <div class="brimm-blocks--membership-columns grid-cols-{{ section.settings.columns }}">
            <div class="brimm-blocks--global-benefits">
                <div class="rte">{{ section.settings.global_benefits }}</div>
            </div>
            {% for block in section.blocks %}
                <div class="brimm-blocks--column">
                    <div class="brimm-blocks--column-top">
                        {% if block.settings.column_image %}
                            <img
                                src="{{ block.settings.column_image | image_url: width: 800 }}"
                                alt="{{ block.settings.column_image.alt | escape }}"
                                class="brimm-blocks--column-image"
                                loading="lazy"
                            >
                        {% endif %}
                        <h3>{{ block.settings.title }}</h3>
                        <div class="brimm-blocks--column-content">
                            <p>{{ block.settings.content }}</p>
                        </div>
                    </div>
                    <div class="brimm-blocks--column-pricing">
                        <p class="brimm-blocks--large-para">{{ block.settings.yearly_price }} annually</p>
                        <p class="brimm-blocks--monthly-pricing">or {{ block.settings.monthly_price }} monthly</p>
                    </div>
                    <div class="brimm-blocks--column-bottom">
                        {% if block.settings.button_label %}
                            <a href="{{ block.settings.button_url }}" class="button">
                                {{ block.settings.button_label }}
                            </a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="brimm-blocks--supporter">
            <div class="brimm-blocks--supporter-header">
                <div>
                    <h4>{{ section.settings.supporter_heading }}</h4>
                    <p class="rte">{{ section.settings.supporter_text }}</p>
                </div>
                <div class="brimm-blocks--supporter-actions">
                    <div class="brimm-blocks--column-pricing">
                        <p class="brimm-blocks--large-para">{{ section.settings.supporter_yearly_price }} annually</p>
                        <p class="brimm-blocks--monthly-pricing">or {{ section.settings.supporter_monthly_price }} monthly</p>
                    </div>
                    {% if section.settings.supporter_button_label %}
                        <a href="{{ section.settings.supporter_button_url }}" class="button">
                            {{ section.settings.supporter_button_label }}
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
