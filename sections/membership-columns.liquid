{% schema %}
{
  "name": "Membership Columns",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why join us?"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Explore the benefits of membership</p>"
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Number of columns",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
            "type": "image_picker",
            "id": "column_image",
            "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "richtext",
          "id": "benefits",
          "label": "Membership Benefits"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Learn more"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Membership Columns",
      "blocks": [
        { "type": "column" },
        { "type": "column" },
        { "type": "column" }
      ]
    }
  ]
}
{% endschema %}

<div class="brimm-blocks--membership">
    <div class="page-width">
        <div class="brimm-blocks--section-header">
            <h2>{{ section.settings.heading }}</h2>
            <ddiv class="rte">{{ section.settings.subheading }}</ddiv>
        </div>
        <div class="brimm-blocks--membership-columns grid-cols-{{ section.settings.columns }}">
            {% for block in section.blocks %}
                <div class="brimm-blocks--column">
                    {% if block.settings.column_image %}
                        <img
                            src="{{ block.settings.column_image | image_url: width: 800 }}"
                            alt="{{ block.settings.column_image.alt | escape }}"
                            class="brimm-blocks--column-image"
                            loading="lazy"
                        >
                    {% endif %}
                    <div class="brimm-blocks--column-top">
                        <h3>{{ block.settings.title }}</h3>
                        <div class="brimm-blocks--benefits">
                            {{ block.settings.benefits }}
                        </div>
                    </div>
                    {% if block.settings.button_label %}
                        <a href="{{ block.settings.button_url }}" class="button">
                            {{ block.settings.button_label }}
                        </a>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
